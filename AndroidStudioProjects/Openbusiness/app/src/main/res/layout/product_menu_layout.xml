<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/app_color">

        <ImageView
            android:id="@+id/leftMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/title_bar_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/leftMenu"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Product"
            android:textSize="18dp"
            android:textColor="#fff"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/menu" />
    </RelativeLayout>

    <ListView
        android:id="@+id/product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:dividerHeight="0dp"></ListView>
    <LinearLayout
        android:id="@+id/menu_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_back"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="Email Template"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/download_txt"

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="Download Template"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/bulk_txt"

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="Bulk Upload"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/all_product_txt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="Share All Product"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/clone_txt"

            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="Clone Catalogue"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textColor="#000"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

    </LinearLayout>
</RelativeLayout>